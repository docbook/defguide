#!/usr/bin/perl -- # -*- Perl -*-

use strict;
use English;

my %MONTHS = ('Jan' => 1, 'Feb' => 2, 'Mar' => 3, 'Apr' => 4, 'May' => 5, 'Jun' => 6,
              'Jul' => 7, 'Aug' => 8, 'Sep' => 9, 'Oct' => 10, 'Nov' => 11, 'Dec' => 12);

my $inmsg = 0;
my $aftermsg = 0;
my $hash = undef;
my $date = undef;
my $committer = undef;
my $committer_email = undef;
my $message = undef;
my @files = ();
my $LOG;

print "<git-repo-info xmlns='http://nwalsh.com/ns/git-repo-info'>\n";

open ($LOG, "git log --name-status |");
while (<$LOG>) {
    chop;

    if (/^commit (.*)$/) {
        if (defined($hash)) {
            print "<commit>\n";
            print "<hash>$hash</hash>\n";
            foreach my $file (@files) {
                print "<file>$file</file>\n";
            }
            print "<date>$date</date>\n";
            if (defined($committer_email)) {
                print "<committer-name>", esc($committer), "</committer-name>\n";
                print "<committer-email>", esc($committer_email), "</committer-email>\n";
            } else {
                print "<committer>", esc($committer), "</committer>\n";
            }
            print "<message>", esc($message), "</message>\n";
            print "</commit>\n\n";
        }

        $hash = $1;
        $date = undef;
        $committer = undef;
        $committer_email = undef;
        $message = "";
        $inmsg = 0;
        $aftermsg = 0;
        @files = ();
        next;
    }

    if (/^Author:\s+(.*)$/) {
        $committer = $1;
        if ($committer =~ /^(\S+)\s<(.*?)>\s*$/) {
            $committer_email = $2;
            $committer = $1;
        }
    }

    if (/^Date:\s+(.*)$/) {
        $date = $1;
        die unless $date =~ /... (...) (\d+) (\d+:\d+:\d+) (\d+) ([\+\-]\d\d)(\d\d)/;
        my $year = $4;
        my $month = $MONTHS{$1} || die "Not a month? $1\n";
        my $day = $2;
        my $time = $3;
        my $tz = "$5:$6";
        $date = sprintf ("%04d-%02d-%02dT%s%s", $year, $month, $day, $time, $tz);
    }

    if ($_ eq '') {
        if ($inmsg) {
            $inmsg = 0;
            $aftermsg = 1;
        } else {
            $inmsg = 1;
        }
    }

    if (/^\s+(.*)$/) {
        if ($inmsg) {
            $message = $1 if $message eq '';
        } else {
            die "???";
        }
    }

    if (/^[AMD]\s+(.*)$/) {
        die "???" if !$aftermsg;
        push (@files, $1);
    }

    if (/^[R]\d+\s+(.+)\s+(.+)$/) {
        die "???" if !$aftermsg;
        push (@files, $1);
        push (@files, $2);
    }
}
close ($LOG);

print "<commit>\n";
print "<hash>$hash</hash>\n";
foreach my $file (@files) {
    print "<file>$file</file>\n";
}
print "<date>$date</date>\n";
print "<committer>", esc($committer), "</committer>\n";
print "<message>", esc($message), "</message>\n";
print "</commit>\n\n";

print "</git-repo-info>\n";

sub esc {
    local $_ = shift;

    s/&/&amp;/sg;
    s/</&lt;/sg;
    s/>/&gt;/sg;

    return $_;
}
